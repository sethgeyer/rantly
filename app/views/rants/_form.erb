<section class="qtr-wide rant-form ">

  <div class="photo-name">
    <%= image_tag kenny_loggins.image_url.to_s %>
    <br/>
    <%= link_to "#{kenny_loggins.first_name} #{kenny_loggins.last_name}", edit_user_path, class: "profile-link" %>
  </div>

  <hr/>

  <% @rant ||= Rant.new %>

  <%= form_for [kenny_loggins, @rant] do |f| %>

    <%= f.label :topic, "A rant about:" %>
    <br/>
    <%= f.text_field :topic, class: "wide-input flex-c" %>
    <div class="topic-errors"></div>


    <br/>
    <%= f.label :details, "Rant:" %>
    <br/>
    <%= f.text_area :details, class: "wide-text-area flex-c", placeholder: "Rant about something or at someone..." %>
    <div class="detail-errors"></div>

    <br/>
    <%= f.submit "Rant", class: "wide-button rant-submitter" %>

  <% end %>

</section>