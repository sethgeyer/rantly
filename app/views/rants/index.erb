
    <section class="three-qtr-wide rants">
        <div class="content-header">Search</div>
        <hr/>

      <%= form_tag rants_path, method: :get, class: "flex-container horizontal-form" do %>
        <%= text_field_tag :search, nil, class: "horizontal-form-input" %>
        <%= submit_tag "Search", class: "horizontal-form-button" %>
      <% end %>

      <br/>
      <br/>


      <% if @rants %>

        <% @rants_to_loop_through = @rants %>
        <%= render "/rants/section_of_rants"%>




      <% end %>


    </section>








