<% favorite = Favorite.where(rant_id: @rant_to_fave.id, user_id: kenny_loggins.id).first %>
<% fave_count_for_link = Favorite.create_favorite_count(@rant_to_fave.id) %>

<% if favorite %>
  <%= link_to "#{fave_count_for_link}" + "Unfavorite", user_favorite_path(favorite.id), method: :DELETE, class: "right-floater" %>
<% else %>
  <%= link_to "#{fave_count_for_link}" + "Favorite", user_favorites_path(rant_id: @rant_to_fave.id), method: :POST, class: "right-floater" %>
<% end %>