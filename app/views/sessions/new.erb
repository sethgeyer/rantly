<div id="new-sessions">

  <%=flash[:notice] %>

  <%=form_for :session, url: sessions_path do |f|%>
    <div>
      <%=f.label :username%>
      <%=f.text_field :username%>
    </div>
    <div>
      <%=f.label :password%>
      <%=f.password_field :password%>
    </div>

    <div>
      <%=f.submit "Login"%>
    </div>

  <%end%>

</div>