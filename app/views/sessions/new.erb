<div id="new-sessions" class="naked-form">

  <div class="input-box">
    <h1>Login</h1>
    <br/>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
      <br/></br/>
    <% end %>

    <%= form_for :session, url: sessions_path do |f| %>
      <%= f.label :username %>
      <br/>
      <%= f.text_field :username, class: "wide-input" %>
      <br/>
      <br/>
      <%= f.label :password %>
      <br/>
      <%= f.password_field :password, class: "wide-input" %>
      <div class="spacer-border"></div>
      <%= f.submit "Login", class: "wide-button" %>
    <% end %>
  </div>

</div>